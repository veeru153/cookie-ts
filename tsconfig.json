{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src/",
        "baseUrl": "..",
        "skipLibCheck": true,
        "incremental": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ]
}